<script src="/js/toast.js"></script>
<script>
  
  document.forms[0].addEventListener('submit', e => {
    e.preventDefault();
    // info to send
    const username = document.getElementById('name');
    const useremail = document.getElementById('email');
    const message = document.getElementById('message');
    
    const submitBtn = document.querySelector("button[type='submit']");
    let btnText = submitBtn.textContent;

    var http = new XMLHttpRequest();
    http.open("POST", e.target.action, true);
    http.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
    http.onreadystatechange = function() {
      if (this.readyState == 4 && this.status == 200) {
        let json = JSON.parse(this.response);
        if (json.status) {
          useremail.value = ''; username.value = ''; message.value = '';
          Toast({position: 'alert-bottom-center', color: 'alert-green', message: json.message});
        } else {
          Toast({position: 'alert-bottom-center', color: 'alert-red', message: json.message});
        }
        submitBtn.disabled = false;
        submitBtn.textContent = btnText;
      }
    };

    // remove is invalid
    username.classList.remove('is-invalid');
    useremail.classList.remove('is-invalid');
    message.classList.remove('is-invalid');

    var valid = true;
    var regex = /^[A-Z0-9._%+-]+@[A-Z0-9.-]+\.[A-Z]{2,4}$/i;

    if (username.value.trim().length === 0) {
      username.classList.add('is-invalid');
      valid = false;
    }
    if (useremail.value.trim().length === 0 || !regex.test(useremail.value)) {
      useremail.classList.add('is-invalid');
      valid = false;
    }
    if (message.value.trim().length === 0) {
      message.classList.add('is-invalid');
      valid = false;
    }

    if (valid) {
      http.send(`senderUsername=${username.value}&senderEmail=${email.value}&message=${message.value}`);
      submitBtn.disabled = true;
      submitBtn.textContent = 'Sending...';
    }
  });

</script>